<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/game_activity_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_a_door"
                android:textSize="26sp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp">
            </TextView>

        </LinearLayout>

            <include
                android:id="@+id/door_images"
                layout="@layout/doors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </include>

            <GridLayout
                android:id="@+id/grid_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:padding="5dp"
                    android:text="@string/switch_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:padding="5dp"
                    android:text="@string/stay_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:text="@string/wins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:text="@string/loss" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:text="@string/total" />

                <TextView
                    android:id="@+id/switch_wins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/switch_losses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/switch_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/stay_wins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/stay_losses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/stay_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:text="0" />

        </GridLayout>


    </LinearLayout>

</FrameLayout>